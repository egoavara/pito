{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tsc-watch",
            "dependsOrder": "parallel",
            "dependsOn": [
                "tsc-watch:cjs",
                "tsc-watch:esm",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "tsc-watch:cjs",
            "type": "typescript",
            "tsconfig": "./cjs/tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build"
        },
        {
            "label": "tsc-watch:esm",
            "type": "typescript",
            "tsconfig": "esm/tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build",
        }
    ]
}